extends ../base

block content 
    form(method="POST", enctype="multipart/form-data")
        label(for="Avatar") Avatar
        input(type="file", name="profileImg", id="avatar", accept="image/*" )
        input(placeholder="Name", name="name", type="txet", value=loggedInUser.name)
        input(placeholder="Email",name="email",type="email", value=loggedInUser.email)
        input(placeholder="Username",name="username",type="txet", value=loggedInUser.username)
        input(placeholder="Location",name="location",type="txet", value=loggedInUser.location)
        input(type="submit", value="Edit Profile")
    if !loggedInUser.socialOnly
        hr
        a(href="/users/change-password") Change Password &rarr;
