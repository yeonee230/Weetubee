extends ../base

block content 
    video(src="/"+video.videoFile, controls )
    button#play Play
    button#mute Mute
    span#time 00:00/00:00 
    input(type="range", min="0", max="1", value=0.5, step="0.1")#volume
    //-
        div
            p=video.description
            small=video.createdAt
        div
            small Uploaded by 
                a(href=`/users/${video.owner._id}`) #{video.owner.username}
        hr
        if  loggedInUser._id === String(video.owner._id)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts 
    script(src="/static/js/videoPlayer.js") 